<div class='container-fluid weight-page'>
  <h2 class='text-center weight-title'>Squat weight record</h2>
  <div class='row'>
    <div class='col-lg-12'>
      <div class='chart-wrapper'>
        <div class="btn-group btn-group-sm chart-btn-group">
          <button type="button" id ='daily-squat-chart-btn' class="btn btn-danger active">week</button>
          <button type="button" id ='weekly-squat-chart-btn' class="btn btn-danger">month</button>
          <button type="button" id ='monthly-squat-chart-btn' class="btn btn-danger">year</button>
        </div>
        <div class='chart-box'>
          <span class=chart-label>kg</span>
          <div class='weight-chart active daily-chart' id='daily-squat-chart'>
            <%= squat_chart_graph(@user, @dailychart_range) %>
          </div>
          <div class='weight-chart weekly-chart' id='weekly-squat-chart'>
            <%= squat_chart_graph(@user, @weeklychart_range) %>
          </div>
          <div class='weight-chart monthly-chart' id='monthly-squat-chart'>
            <%= squat_chart_graph(@user, @monthlychart_range) %>
          </div>
        </div>
      </div>
    </div>

    <div class='col-lg-12'>
      <div class='table-wrapper'>
        <div class='weight-table-wrapper'>
          <div class='next-back'>
            <%= link_to "< Last week",user_squat_weight_records_path(@user, date: params[:date].to_i + 1) %>
            <%= link_to "Next week >",user_squat_weight_records_path(@user, date: params[:date].to_i - 1) %>
          </div>
          <table class='weight-table'>
            <thead>
              <tr>
                <th>Date</th>
                <th class='text-center'>Weight</th>
                <th>Comp</th>
                <th>Del</th>
              </tr>
            </thead>
            <tbody>
              <% @date_range.each do |date| %>
                <tr>
                  <td><%= date.strftime("%-m/%d(#{@weeks[date.wday]})")%></td>
                  <% @user.squat_weight_records.each do |squat_weight_record| %>
                    <% if squat_weight_record.squat_day == date %>
                      <% if current_user == @user %>
                        <td class='weight-edit-form' >
                          <%= form_with model: [@user, squat_weight_record] do |f|%>
                            <%= f.number_field :squat_weight, step: '0.1', class: 'weight-edit-field' %>
                            <span class='weight-edit-icon'><i class="fas fa-edit"></i></span>
                            <span> kg</span><br>
                            <%= f.submit 'Edit', class: ' blue-btn btn-sm weight-edit-btn btn-danger' %>
                          <% end %>
                        </td>
                      <% else %>
                        <td class='text-center'><%= squat_weight_record.squat_weight %><span> kg</span></td>
                      <% end %>
                      <td>
                        <% if @last_weight.present? %>
                          <% if (squat_weight_record.squat_weight - @last_weight) > 0%>
                            <p class='positive-weight'>+<%= (squat_weight_record.squat_weight - @last_weight).round(1) %> kg</p>
                          <% else%>
                            <p class='negative-weight'><%= (squat_weight_record.squat_weight - @last_weight).round(1) %> kg</p>
                          <% end %>
                        <% end %>
                      </td>
                      <% @last_weight = squat_weight_record.squat_weight%>
                      <% if current_user == @user %>
                        <td>
                          <%= link_to user_squat_weight_record_path(user_id: @user, id: squat_weight_record), method: :delete, data: { confirm: 'Do you want to delete？' } do %>
                            <button type="button" class="btn btn-outline-danger btn-sm " >✕</button>
                          <% end %>
                        </td>
                      <% end %>
                    <% end %>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <input type="button" id="new-squat-weight-btn" class='btn-danger btn-default btn-lg blue-btn float-right bottom text-center' style="margin-top: 15px;" value='Record weight' >
    </div>
  </div>
</div>

<div id="squat-weight-modal" class="body-weight-modal">
  <% if user_signed_in? %>
    <% if current_user == @user %>
      <div class='form-wrapper weight-new-form'>
        <%= form_with model: [@user, @squat_weight_record], local: true do |f| %>
          <div>
          <%= f.label :squat_day, 'Date'%>
          <%= f.date_field :squat_day, value: Date.today%>
          </div>

          <div>
          <%= f.label :squat_weight, 'Squat weight'%>
          <%= f.number_field :squat_weight, step: '0.5', placeholder:"Example) 80" %><span> kg</span>
          </div>

          <div class='text-right'>
            <%= f.submit 'Record', class: 'blue-btn btn-default btn-danger'%>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
