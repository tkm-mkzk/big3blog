<div class='signup-form'>
  <div class='form-wrap'>
  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

    <div class='form-header'>
      <h1 class='form-header-text'>
        Sign up
      </h1>
    </div>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム(<span class="indispensable">必須</span>)</label>
      </div>
      <%= f.text_field :nickname, class:"input-default form-control", id:"nickname", placeholder:"例) muscle太郎", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス(<span class="indispensable">必須</span>)</label>
      </div>
      <%= f.email_field :email, class:"input-default form-control", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード(<span class="indispensable">必須</span>)</label>
      </div>
      <%= f.password_field :password, class:"input-default form-control", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">確認パスワード(<span class="indispensable">必須</span>)</label>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default form-control", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
      <div class='register-btn btn-default'>
        <%= f.submit "登録" ,class:"registration-btn" %>
      </div>
  <% end %>
  <div>
    すでにアカウントをお持ちですか？
    <p class='with'><%= link_to "ログイン。", new_user_session_path %></p>
  </div>
  </div>
</div>
