<div class='user-edit-form'>
  <div class='form-wrap'>
    <%= form_with model: @user, local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :nickname, 'ニックネーム' %>
        <%= f.text_field :nickname, placeholder: 'ニックネームを入力してください', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'メールアドレス'%>
        <%= f.text_field :email, placeholder: 'メールアドレスを入力してください', class: 'form-control' %>
      </div>

      <div class="">
        <%= link_to 'キャンセル', user_path(@user.id) %>
        <%= f.submit "更新する" %>
      </div>
    <% end %>
  </div>
</div>
