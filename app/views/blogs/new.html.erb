<div class='blog-new-form'>
  <div class='form-wrap'>
    <%= form_with model: @blog, local: true do |f| %>

    <div class='form-header'>
      <h1 class='form-header-text'>
        New blog
      </h1>
    </div>

    <%= render 'shared/error_messages', model: f.object %>

      <div class="form-group"">
        <div class="weight-bold-text">
          画像
        </div>
        <div class="click-upload">
          <p>
            クリックしてファイルをアップロード
          </p>
          <%= f.file_field :image, id:"item-image" %>
        </div>
      </div>

      <div class="form-group"">
        <%= f.label :title, 'タイトル' %>(<span class="indispensable">必須</span>)
        <%= f.text_field :title, placeholder: 'タイトルを入力してください', class: 'form-control' %>
      </div>

      <div class="checkbox">
        <%= f.label :target_site, '鍛えた部位'%>(1つ以上<span class="indispensable">必須</span>)<br>
          <div class="form-inline">
            <%= f.check_box :target_site, {multiple: true}, "胸", nil %>胸　
            <%= f.check_box :target_site, {multiple: true}, "腕", nil %>腕　
            <%= f.check_box :target_site, {multiple: true}, "肩", nil %>肩　
            <%= f.check_box :target_site, {multiple: true}, "腹", nil %>腹　
            <%= f.check_box :target_site, {multiple: true}, "背中", nil %>背中　
            <%= f.check_box :target_site, {multiple: true}, "脚", nil %>脚　
            <%= f.check_box :target_site, {multiple: true}, "その他", nil %>その他　
          </div>
      </div>

      <div class="form-group">
        <%= f.label :content, 'メニューの方法' %>(<span class="indispensable">必須</span>)
        <%= f.text_area :content, placeholder: 'メニューや感想を入力してください', class: 'form-control' %>
      </div>

        <%= link_to 'キャンセル', root_path, class: "with" %>
      <div class="btn-default blog-btn">
        <%= f.submit "投稿する" %>
      </div>
    <% end %>
  </div>
</div>
