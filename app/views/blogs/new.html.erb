<div class='blog-new-form'>
  <div class='form-wrap'>
    <%= form_with model: @blog, local: true do |f| %>

    <div class='form-header'>
      <h1 class='form-header-text'>
        New blog
      </h1>
    </div>

    <%= render 'shared/error_messages', model: f.object %>

      <div class="form-group"">
        <div class="weight-bold-text">
          image
        </div>
        <div class="click-upload">
          <p>
            Click to upload the file
          </p>
          <%= f.file_field :image, id:"item-image" %>
        </div>
      </div>

      <div class="form-group"">
        <%= f.label :title, 'Title' %>(<span class="indispensable">Required contents</span>)
        <%= f.text_field :title, placeholder: 'Please enter a title', class: 'form-control' %>
      </div>

      <div class="checkbox">
        <%= f.label :target_site, 'Target site'%>(<span class="indispensable">Required contents</span>)<br>
          <div class="form-inline">
            <%= f.check_box :target_site, {multiple: true}, "chest", nil %>chest　
            <%= f.check_box :target_site, {multiple: true}, "arm", nil %>arm　
            <%= f.check_box :target_site, {multiple: true}, "shoulder", nil %>shoulder　
            <%= f.check_box :target_site, {multiple: true}, "abdominal", nil %>abdominal　
            <%= f.check_box :target_site, {multiple: true}, "back", nil %>back　
            <%= f.check_box :target_site, {multiple: true}, "leg", nil %>leg　
            <%= f.check_box :target_site, {multiple: true}, "other", nil %>other　
          </div>
      </div>

      <div class="form-group">
        <%= f.label :content, 'Menu and impressions' %>(<span class="indispensable">Required contents</span>)
        <%= f.text_area :content, placeholder: 'Please enter your menu and impressions', class: 'form-control' %>
      </div>

        <%= link_to 'Cancel', root_path, class: "with" %>
      <div class="btn-default blog-btn">
        <%= f.submit "Post" %>
      </div>
    <% end %>
  </div>
</div>
