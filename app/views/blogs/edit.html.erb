<div class='form-wrapper'>
  <%= form_with model: @blog, local: true do |f| %>

  <%= render 'shared/error_messages', model: f.object %>

    <div class="img-upload">
      <div class="weight-bold-text">
        画像
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :title, 'タイトル' %>
      <%= f.text_field :title, placeholder: 'タイトルを入力してください', class: 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :target_site, '鍛えた部位'%>
      <%= f.text_field :target_site, placeholder: '鍛えた部位を入力してください', class: 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :content, 'メニューの方法' %>
      <%= f.text_area :content, class: 'form-control'%>
    </div>

    <div class="actions text-right">
      <%= link_to 'キャンセル', root_path %>
      <%= f.submit "更新する" %>
    </div>
  <% end %>
</div>
