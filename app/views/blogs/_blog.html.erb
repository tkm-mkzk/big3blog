<div class="card">
  <% if blog.image.present? %>
          <div class='blog-img-content'>
            <%= image_tag blog.image, class: "blog-img" %>
          </div>
        <% else %>
          <div class='blog-img-content'>
            <%= image_tag 'test_image2.png', class: "blog-img" %>
          </div>
        <% end %>
  <div class="card__body">
    <%= link_to blog.title, blog_path(blog.id), class: :card__title%>
    <p class="card__summary">
      <%= blog.target_site %>
    </p>
    <p class="card__summary">
      <%= blog.content %>
    </p>
    <%= link_to "by #{blog.user.nickname}", user_path(blog.user.id),method: :get, class: :card__user %>
  </div>
</div>
