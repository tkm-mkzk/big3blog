<div id="body_weight-modal" class="body_weight-modal">

  <%= line_chart @body_weights.group_by_day(:day).sum(:weight), curve: false, width: "800px", height: "500px", xtitle: "日", ytitle: "体重(kg)" %>

  <div id="target"></div>



  <% if user_signed_in? %>
    <% if current_user == @user %>
      <div class='form-wrapper weight-new-form'>
        <%= form_with model: [@user, @body_weight], local: true do |f| %>
          <div>
          <%= f.label :day, '日付'%>
          <%= f.date_field :day, value: Date.today%>
          </div>

          <div>
          <%= f.label :weight, '体重'%>
          <%= f.number_field :weight, step: '0.1' %><span> kg</span>
          </div>

          <div class='text-right'>
            <%= f.submit '記録する', class: 'btn-default red-round-btn'%>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
